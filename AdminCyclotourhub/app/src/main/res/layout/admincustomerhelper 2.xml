<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adminmessage_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/adminicon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.cardview.widget.CardView
            android:id="@+id/admincvSellerTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:background="@color/white"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"

                >
                <TextView
                    android:id="@+id/admintvName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:width="20dp"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text="Welocome to IO"
                    android:textAlignment="center"
                    android:textColor="@color/purple_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/admintvAddress"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:width="20dp"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/purple_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="85dp"
                    android:src="@drawable/arrow"></ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>