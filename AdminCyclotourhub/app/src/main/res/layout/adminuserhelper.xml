<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adminmessage_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/adminicon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/admincvSellerTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:background="@color/white"
            app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white"

            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
        <TextView
            android:layout_width="117dp"
            android:layout_height="42dp"
            android:textSize="20dp"
            android:textColor="@color/purple_200"
            android:text="Username : "></TextView>
    <TextView
        android:id="@+id/tvuserUsername"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:textSize="20dp"
        android:textColor="@color/purple_200"
        android:text="Username"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgActive"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            ></de.hdodenhof.circleimageview.CircleImageView>
</LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>