<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">
    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSellerTitle"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text="Welocome to IO"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvtrackid"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvtrackname"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvslat"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvelat"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvslng"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvelng"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:width="20dp"
                    android:text="Welocome to IO"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="85dp"
                    android:src="@drawable/arrow"></ImageView>
                       </LinearLayout>
        </androidx.cardview.widget.CardView>

